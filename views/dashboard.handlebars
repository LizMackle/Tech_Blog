<section>
    <div class="container mt-5 d-flex justify-content-center border border-black">
        <div class="row align-items-center card-body text-center " style="background-color: #f7f0e2">
            <div class="col-12">
                <h2>Create a new post</h2>
            </div>
            <div class="col-12">
                <form class="new-post">
                    <div class="form-group mt-2">
                        <label for="post-title">Title</label>
                        <input class="form-control mt-2" type="text" id="post-title" name="post-title" />
                    </div>
                    <div class="form-group mt-4">
                        <label for="post-description">Description</label>
                        <textarea class="form-control mt-2" id="post-description" name="post-description"></textarea>
                    </div>
                    <button type="submit" class="btn btn-outline-dark btn-md px-5 mt-4">Create</button>
                </form>
            </div>
        </div>
    </div>
</section>

{{#if posts.length}}
<section>
    <div class="container pb-5 mt-5 justify-content-center">
        <div class="row align-items-center text-center">
            <div class="col-12">
                <h3>Your Posts</h3>
            </div>
            <div class="col-12">
                    {{#each posts as |post|}}
                    {{> post-info post}}
                    <a href="/dashboard/edit/{{post.id}}" class="edit-link" >Edit post</a>
                    {{/each}}
            </div>
        </div>
    </div>
</section>
{{/if}}

<script src="/js/add-post.js"></script>